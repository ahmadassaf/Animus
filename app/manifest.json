{
  "name": "Animus",
  "description": "Chrome Extension for instantly storing and filtering your ideas, todos, links, check-laters.",
  "version": "0.3.0",
  "manifest_version": 2,
  "icons": {
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/logo38.png",
      "38": "img/logo38.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "toggle-animus": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "Toggle Animus"
    },
    "save-website": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Save current website as entry"
    }
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["bundle.js"],
    "css": ["all.css"]
  }],
  "homepage_url": "https://github.com/dasilvacontin/animus",
  "offline_enabled": true,
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "bundle.js.map",
    "fonts/*"
  ]
}
