{
  "name": "Animus",
  "description": "The element of a person that enables them to be aware of the world and their experiences, to think, and to feel.",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "toggle-animus": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "Toggle Animus"
    }
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["bundle.js"],
    "css": ["all.css"]
  }],
  "homepage_url": "https://github.com/dasilvacontin/animus",
  "offline_enabled": true,
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": ["bundle.js.map"]
}
